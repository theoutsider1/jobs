

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id Int @id @default(autoincrement())

  createdAt DateTime @default(now())  @db.Timestamp
  updatedAt DateTime? @updatedAt  @db.Timestamptz

  title String 

  city String 
  
  contractType String 

  experience String

  domaine String 

  companyName String

  description String
  
  jobType String

  missions  String

  deadline DateTime? @db.Timestamptz

  fonction String?

  studiesRequirement String

  profil  String

  advantages String[]

  appliedCandidateId Int? @default(0)

  candidates Candidate? @relation(fields: [appliedCandidateId], references: [id])

  publishedBy Recruiter @relation(fields: [publishedById],references: [id] )

  publishedById Int

  // CVs relation 
   cvsFiles       CvsFile[] // One-to-many relationship with CvsFile
  }

model Recruiter {

  id Int @id @default(autoincrement())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  fullName String

  jobs Job[]

  // email 
  mail String @unique

  phone_number String @unique

  password String 

  
}


model Candidate {

  id Int @id @default(autoincrement())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  fullName String

  mail String @unique

  phone_number String @db.VarChar(10)

  jobs Job[]

}

model CvsFile {
  id Int @id @default(autoincrement())
  filename  String
  size      Int
  url       String
  createdAt DateTime @default(now())

   jobId          Int       // Foreign key to Job model
  job            Job       @relation(fields: [jobId], references: [id])
}